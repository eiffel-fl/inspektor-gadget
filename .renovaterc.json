{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "postUpdateOptions" : [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["go"],
      "addLabels": ["go"]
    },
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    }
  ]
}
